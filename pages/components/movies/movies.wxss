/* pages/components/movies/movies.wxss */
page .hot {
  margin: 10rpx 0rpx 5rpx 25rpx;
}
page .hot-title {
  font-weight: 1000;
}
page .all {
  display: flex;
  flex-wrap: wrap;
}
page .all .hot-movie {
  position: relative;
  display: flex;
  flex-direction: column;
}
page .all .hot-movie .images {
  width: 345rpx;
  height: 200rpx;
  margin-right: 10rpx;
  margin-bottom: 0;
}
page .all .hot-movie .date {
  font-size: 11px;
  position: absolute;
  right: 5%;
  bottom: 41%;
  color: #fff;
  font-weight: 700;
  text-shadow: 0 0 4px rgba(0, 0, 0, 0.7);
}
page .all .hot-movie .subtitle {
  font-size: 12px;
  margin-bottom: 5px;
  color: gray;
}
page .all .hot-movie .toptitle,
page .all .hot-movie .subtitle {
  width: 345rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
