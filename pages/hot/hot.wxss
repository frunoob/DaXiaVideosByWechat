.vv {
  width: 750rpx;
  height: 530rpx;
  overflow: hidden;
  position: relative;
  border-bottom: #f5f7f9 solid 20rpx;
}
/* 标题文字 */
.text {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  z-index: 101;
  font-size: 40rpx;
  color: #fff;
  font-weight: 550;
  margin-left: 10rpx;
  text-shadow: #000 2rpx 3rpx 8rpx;
}
/* 视频 */
.video {
  width: 100%;
  height: 450rpx;
}
.videoVideo2 {
  width: 750rpx;
  height: 453rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99;
}
.videoPlay {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  top: 45%;
  left: 45%;
  margin: -30rpx 0 0 -30rpx;
  z-index: 100;
}
.bottom {
  position: absolute;
  margin: 0 10rpx;
  width: 100%;
  padding-top: 8rpx;
  bottom: 0;
  color: black;
  display: flex;
  height: 71rpx;
}
.bottom .left .author {
  display: flex;
  height: 71rpx;
}
.bottom .left .author .touXiang {
  border-radius: 100%;
  width: 71rpx;
  height: 71rpx;
}
.bottom .left .author .author_name {
  color: #000;
  padding: 0rpx 0rpx 0 10rpx;
}
.bottom .right {
  display: flex;
  position: absolute;
  right: 25rpx;
}
.bottom .right .like {
  padding-top: 15rpx;
  margin: 0 5rpx;
  display: flex;
  height: 71rpx;
}
.bottom .right .like .like_image {
  height: 45rpx;
  width: 45rpx;
}
.bottom .right .like .likeNum {
  font-size: smaller;
  padding-left: 5rpx;
}
.bottom .right .share {
  padding-top: 15rpx;
  margin-left: 25rpx;
  height: 71rpx;
  width: fit-content;
  display: flex;
  flex-wrap: nowrap;
  position: relative;
}
.bottom .right .share .share_button {
  position: relative;
  width: 45rpx;
  border: none;
  padding: 0 5rpx;
  height: 45rpx;
}
.bottom .right .share .share_button::after {
  border: none;
}
.bottom .right .share .share_button .share_image {
  position: absolute;
  top: 0;
  left: 0;
  background: none;
  height: 45rpx;
  width: 45rpx;
}
.bottom .right .share .share_text {
  padding-top: 15rpx;
  height: 40rpx;
  font-size: xx-small;
}
